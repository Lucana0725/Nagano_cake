<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>-->
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-light">
        <div class="container">
          <%= link_to root_path, class: "navbar-brand text-dark" do %>
            <span>LOGO</span>
          <% end %>
          <div class="row">
            <% if customer_signed_in? %>
              <span>ようこそ、<%= current_customer.last_name %>さん！</span>
            <% end %>
          </div>
            
          <div class="row">
            <div class="col float-right">
              <ul class="navbar-nav">
              <% if customer_signed_in? %>
                <li>
                  <!--マイページ-->
                  <%= link_to "マイページ", customers_my_page_path, class: "mr-3 nav-link text-dark btn btn-outline-secondary" %>
                </li>
                <li>
                  <!--商品一覧-->
                  <%= link_to "商品一覧", items_path, class: "mr-3 nav-link text-dark btn btn-outline-secondary" %>
                </li>
                <li>
                  <!--カート-->
                  <%= link_to "カート", cart_items_path, class: "mr-3 nav-link text-dark btn btn-outline-secondary" %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link text-dark btn btn-outline-secondary" %>
                </li>
              <% elsif admin_signed_in? %>
                <li>
                  <!--商品一覧-->
                  <%= link_to "商品一覧", admin_items_path, class: "mr-3 nav-link text-dark btn btn-outline-secondary" %>
                </li>
                <li>
                  <!--会員一覧-->
                  <%= link_to "会員一覧", admin_customers_path, class: "mr-3 nav-link text-dark btn btn-outline-secondary" %>
                </li>
                <li>
                  <!--注文履歴一覧-->
                  <%= link_to "注文履歴一覧", admin_path, class: "mr-3 nav-link text-dark btn btn-outline-secondary" %>
                </li>
                <li>
                  <%= link_to "ジャンル一覧", admin_genres_path, class: "mr-3 nav-link text-dark btn btn-outline-secondary" %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link text-dark btn btn-outline-secondary" %>
                </li>
              <% else %>
                <li>
                  <%= link_to "About", about_path, class: "mr-3 nav-link text-dark btn btn-outline-secondary" %>
                </li>
                <li>
                  <!--商品一覧-->
                  <%= link_to "商品一覧", items_path, class: "mr-3 nav-link text-dark btn btn-outline-secondary" %>
                </li>
                <li>
                  <%= link_to "新規登録", new_customer_registration_path, class: "mr-3 nav-link text-dark btn btn-outline-secondary" %>
                </li>
                <li>
                  <%= link_to "ログイン", new_customer_session_path, class: "nav-link text-dark btn btn-outline-secondary" %>
                </li>
              <% end %>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
