    <div>
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
        <table class="table table-borderless">
          <tr>
            <th class="mr-5"><%= f.label :image, "商品画像" %></th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th class="mr-5"><%= f.label :name , "商品名"%></th>
            <td><%= f.text_field :name, :placeholder => "商品名" %></td>
          </tr>
          <tr>
            <th class="mr-5"><%= f.label :introduction, "商品説明" %></th>
            <td><%= f.text_area :introduction, :placeholder => "ここに説明文を記述します" %></td>
          </tr>
          <tr>
            <th class="mr-5"><%= f.label :genre_id, "ジャンル" %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "選択してください" %></td>
          </tr>
          <tr>
            <th class="mr-5"><%= f.label :price, "税抜価格" %></th>
            <td><%= f.text_field :price, :placeholder => "1000" %>円</td>
          </tr>
          <tr>
            <th class="mr-5"><%= f.label :is_active, "販売ステータス" %></th>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active_true, "販売中" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active_false, "販売停止中" %>
            </td>
          </tr>
        </table>
        <div class="text-center">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
