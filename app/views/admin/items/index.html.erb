<h2>商品一覧</h2>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
    </tr>
  </thead>
  <tbody>
    <!--商品の一覧を表示するので@items = Item.allを使ってeachで一つずつ取り出す-->
    <% @items.each do |item| %>
    <tr>
      <!--商品id-->
      <td>
        <%= item.id %>
      </td>
      <!--商品名(showへのリンク付き)-->
      <td>
        <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
        <% end %>
      </td>
      <!--税抜き価格-->
      <td>
        <%= item.price %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>