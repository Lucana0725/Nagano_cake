        <!--</div>-->
        <!--<div>-->
        <!--  %= f.label :price, "税抜価格" %>-->
        <!--  %= f.text_field :price %>-->
        <!--</div>-->
        <table class="table table-borderless">
          <tr>
            <th><%= f.label :image, "商品画像" %></th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th><%= f.label :name, "商品名" %></th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th><%= f.label :introduction, "商品説明" %></th>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <th><%= f.label :genre_id, "ジャンル" %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
          </tr>
          <tr>
            <th><%= f.label :price, "税抜価格" %></th>
            <td><%= f.text_field :price %></td>
          </tr>
          <tr>
            <th><%= f.label :is_active, "販売ステータス" %></th>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active_true, "販売中" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active_false, "販売停止中" %>
            </td>
          </tr>
        </table>


        <div class="text-center">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>