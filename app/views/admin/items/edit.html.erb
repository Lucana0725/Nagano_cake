  <div class="row">
    <div class="bg-light">
      <h3>商品編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-8 mx-auto">
      <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
        <!--<div>-->
        <!--  %= f.label :image, "商品画像" %>-->
