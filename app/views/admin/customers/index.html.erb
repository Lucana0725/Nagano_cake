<div class="container pt-3">
  <div class="row">
    <div class="bg-light">
      <h2>会員一覧</h2>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-8 mx-auto">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <!--会員ID-->
            <td>
              <%= customer.id %>
            </td>
            <!--氏名-->
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
              <!--氏名は名字と下の名前で分けて登録しているので、連結させる-->
                <%= customer.last_name + customer.first_name %>
              <% end %>
            </td>
            <!--メールアドレス-->
            <td>
              <%= customer.email %>
            </td>
            <!--会員ステータス-->
            <% if customer.is_deleted %>
              <td class="text-secondary">
                退会
              </td>
            <% else %>
              <td class="text-success">
                有効
              </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>

      <!--ページネーション-->
      <div class="row mt-5">
        <div class="mx-auto">
          <%= paginate @customers %>
        </div>
      </div>
    </div>
  </div>
</div>