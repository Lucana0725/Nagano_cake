<div class="container pt-3">
  <div class="row">
    <div class="bg-light">
      <h3>管理者ログイン</h3>
    </div>
  </div>
    
  <div class="row pt-4">
    <div class="col-8 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス", class: "ml-auto" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", class: "form-control" %>
        </div>
      
        <div class="field">
          <%= f.label :password, "パスワード", class: "mt-3 ml-auto" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      
        <!--% if devise_mapping.rememberable? %>-->
        <!--  <div class="field">-->
        <!--    %= f.check_box :remember_me %>-->
        <!--    %= f.label :remember_me %>-->
        <!--  </div>-->
        <!--% end %>-->
      
        <div class="actions text-center">
          <%= f.submit "ログイン", class: "mt-3 btn btn-primary" %>
        </div>
      <% end %>
      
      <%= render "admin/shared/links" %>
    </div>
    
  </div>
  
</div>
