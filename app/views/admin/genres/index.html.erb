<div class="container pt-3">
  <div class="row">
    <div class="bg-light">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>

  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <!--%= f.label :name, "ジャンル名" %>-->
      <!--%= f.text_field :name %>-->

      <!--%= f.submit "新規登録" %>-->
      <table class="table table-borderless">
        <tr>
          <th><%= f.label :name, "ジャンル名" %></th>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>

  <div class="row">
    <div class="col-4">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <!--作成された@genreたちを一覧で取得する@genres = Genre.allに対して一つ一つループで取り出す-->
          <% @genres.each do |genre| %>
          <tr>
            <!--genreで取り出した一つのジャンルに対してnameを付与-->
            <td><%= genre.name %></td>
            <!--genreで取り出した一つのジャンルに対してeditへのリンクを付与(リンクに:idが入るため引数にidが必要)-->
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>