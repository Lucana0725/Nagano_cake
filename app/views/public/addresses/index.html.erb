<h2>配送先登録 / 一覧</h2>

<%= form_with model: @address, url: addresses_path, method: :post do |f| %>
  <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
  <%= f.text_field :postal_code %></br>
  
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %></br>
  
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %>
  
  <%= f.submit "新規登録" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td>
        <%= address.postal_code %>
      </td>
      <td>
        <%= address.address %>
      </td>
      <td>
        <%= address.name %>
      </td>
      <td>
        <!--%= link_to "編集する", address_edit_path %>-->
        <%= link_to "編集する", edit_address_path(address.id) %>
        
        <%= form_with model: @address, url: address_destroy_path, method: :delete do |f| %>
          <%= f.submit "削除する", "data-confirm" => "この配送先を削除します。よろしいですか？" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>