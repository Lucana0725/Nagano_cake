<h2>会員情報編集</h2>
<%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
  <div>
    <%= f.label :name, "氏名" %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :name, "カナ" %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div>
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>
  <div>
    <%= f.label :email, "メールアドレス" %>
    <%= f.text_field :email %>
  </div>
  
  <%= f.submit "編集内容を保存" %>
<% end %>

<%= link_to "退会する", unsubscribe_path %>