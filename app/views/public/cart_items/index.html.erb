<h2>ショッピングカート</h2>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込み)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <!--<td>%= cart_item.item.id %></td>-->
      <td><%= cart_item.name %></td>
      <td><%= cart_item.item.price(get_tax_in_price) %></td>
      <td><%= cart_item.amount %></td>
      <!--<td>cart_item.item.name</td>-->
    </tr>
    <% end %>
  </tbody>
</table>