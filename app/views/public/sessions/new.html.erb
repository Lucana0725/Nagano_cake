<div class="container pt-3">
  <div class="row">
    <div class="bg-light">
      <h3>ログイン</h3>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="bg-light">
      <h4>会員の方はこちらからログイン</h4>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-8 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", class: "form-control mb-3" %>
        </div>
      
        <div class="field">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-3" %>
        </div>
      
        <!--% if devise_mapping.rememberable? %>-->
        <!--  <div class="field">-->
        <!--    %= f.check_box :remember_me %>-->
        <!--    %= f.label :remember_me %>-->
        <!--  </div>-->
        <!--% end %>-->
      
        <div class="actions text-center">
          <%= f.submit "ログイン", class: "btn btn-success mb-5" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="bg-light">
      <h4>会員登録がお済みではない方</h4>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-6 mx-auto">
        <%= link_to new_customer_registration_path do %>
          こちら
        <% end %>
         から新規登録を行ってください。
    </div>
  </div>
    
    
    <!--%= render "public/shared/links" %>-->
  
</div>
